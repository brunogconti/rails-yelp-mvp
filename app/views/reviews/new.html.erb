<h1>Add a Review</h1>
<hr>
<%= simple_form_for ([@restaurant, @review ]) do |f| %>
  <%= f.input :rating, as: :select, collection: [0, 1, 2, 3, 4 ,5], prompt: 'Select Rating', label: :Rating %>
  <%= f.input :content %>
  <%= f.submit class: 'btn btn-primary'%>
<% end %>
<hr>
<%= link_to "Back to #{@restaurant.name}", restaurant_path(@restaurant) %>
