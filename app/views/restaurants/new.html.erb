<h1 class="pt-4">Add a Restaurant</h1>
<hr>
<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, as: :select, collection: %w[chinese italian japanese french belgian], prompt: 'Select Category', label: :Category %>
  <%= f.submit class: 'btn btn-primary'%>
<% end %>
